/**index.wxss**/
.custom{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 45px;
  background: #000000;
  z-index: 999;
  text-align: center;
}
.custom text{
  color: #333333;
  font-size: 20px;
  font-weight: 800;
  max-width: 280rpx;
  height: 45px;
  line-height: 45px;
}
.empty_custom{
  height: 45px;
  width: 100%;
}

/* 搜索框 */
.sourch{
  display: flex;
  height: 90rpx;
  align-items: center;
  justify-content: space-around;
}
.courch-left{
  width: 100rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
}
.courch-left image{
  width: 25rpx;
  height: 25rpx;
}
.courch-left text{
  font-weight: 800;
  font-family: "微软雅黑";
  font-size: 30rpx;
}
.courch-bet{
  width: 520rpx;
  display: flex; 
  border: 1px solid #d4d4d4;
  border-radius: 40rpx;
  padding: 0rpx 10rpx;
  align-items: center;
}
.courch-bet image{
  margin-left: 50rpx;
  width: 40rpx;
  height: 40rpx;
}
.courch-bet input{
  padding-left: 20rpx;
  width: 400rpx;
  height: 60rpx;
}
.courch-bet .pla{
  font-size: 30rpx;
}
.courch-right{
  width: 60rpx;
  position: relative;
}
.courch-right image{
  width: 50rpx;
  height: 50rpx;
}
.courch-right text{
 display: inline-block;
 width: 25rpx;
 height: 25rpx;
 border-radius: 50%;
 background: #ff4036;
 color: white;
 font-size: 20rpx;
 line-height: 25rpx;
 text-align: center;
 position: absolute;
 top: 0rpx;
 right: 0rpx;
}

/* 轮播图 */
.swiper-one{
  width: 750rpx;
  height: 250rpx;
  
}
swiper-item{
  text-align: center;
}
.swiper-item{
  width: 98%;
  height: 250rpx;
  display: inline-block;
}
.swiper-item image{
  width: 100%;
  height: 250rpx;
  border-radius: 50rpx;
}

/* 图标导航 */
.tubiao{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 0rpx;
  text-align: center;
}
.tubiao-one image{
  width: 80rpx;
  height: 80rpx;
}
.tubiao-one view{
  font-size: 25rpx;
  font-family: "微软雅黑";
  font-weight: 600;
  color: #757575;
}

/* 图片导航 */
.img-nav{
  width: 750rpx;
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.img-one{
  width: 45%;
  height: 180rpx;
  text-align: center;
  position: relative;
}
.img-one image{
  width: 100%;
  height: 180rpx;
  border-radius: 40rpx;
}
.img-one .meng{
  width: 100%;
  height: 50rpx;
  display: inline-block;
  font-size: 26rpx;
  background: rgba(20, 20, 20, 0.6);
  text-align: center;
  line-height: 50rpx;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.img-one .meng text{
  color: #fff;
}


/* 选项导航 */
.xuan{
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.xuan-one{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 40rpx;
  display: flex;
  flex-direction:column;
  justify-content: center;
  position: relative;
}
.xuan-text{
  font-size: 32rpx;
  color: #a3a3a3;
}
.actived{
  color: #fc5757;
}
.line {
  width: 70%;
  height: 6rpx;
  background: #fc5757;
  border-radius: 4rpx;
  position: absolute;
  bottom: -10rpx;
  left: 15%;
}
.divider{
  margin-top:10rpx; 
  width: 750rpx;
  height: 1px;
  background: #dddddd;
  box-shadow: 0px 1px 5rpx 0px rgba(218, 217, 217, 0.5)
}

/* 内容 */
.content{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid rgba(241, 233, 233,0.9);
}
.cont-one{
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.one-text{
  width: 440rpx;
 
}
.one-text view{
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap; 
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.one-nav{
  display: flex;
  color: #ccc;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.one-nav .nav-img{
  display: flex;
  padding-right: 20rpx;
  align-items: center;
}
.nav-img .image1{
  width: 40rpx;
  height: 40rpx;
}
.nav-img .image2{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.cont-two image{
  width: 220rpx;
  height: 150rpx;
  border-radius: 30rpx;
}

/* 空白 */
.mengban{
  width: 750rpx;
  height: 100rpx;
}
/* 底部导航栏 */
.bottom-nav{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  font-size: 20rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  box-shadow: 0rpx -2rpx 10rpx 0rpx rgba(216, 211, 211,0.9);
  color: #a3a3a3;
}
.nav-first image{
  width: 45rpx;
  height: 45rpx;
}
.first-zhu{
  color: #dc3520
}